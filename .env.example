# ======================
# HypeTrain FF Backend
# ======================

# Server
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hypetrain_dev
# Optional: Configure connection pool size (default: 20)
# Formula: (postgres_max_connections / num_backend_instances) * 0.8
DB_POOL_SIZE=20

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Background Jobs
# Set to "true" to enable background jobs (autopick, player sync)
# Set to "false" or omit in multi-instance deployments (only one instance should run jobs)
RUN_JOBS=true

# Logging
LOG_LEVEL=debug

# Redis (optional - for Socket.IO horizontal scaling and caching)
# If REDIS_HOST is not set, Socket.IO will run in single-instance mode
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0

# College Football Data API (optional - for college player data)
# Get your API key at: https://collegefootballdata.com/key
CFBD_API_KEY=your-college-football-data-api-key
